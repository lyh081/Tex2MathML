{
    "manifest_version": 2,
    "name": "TexFormula2Word",
    "version": "1.0",
    "description": "Convert Tex to MathML which can be copied into MS Word.",
    "background": {
        "scripts": [
            "js/tex-mml-chtml.js",
            "js/toword.js",
            "js/background.js"
        ]
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "64": "images/icon64.png"
    },
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "64": "images/icon64.png"
        },
        "default_popup": "page.html"
    }
}